<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="transformationsBar" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      prefWidth="150" spacing="10" alignment="CENTER"
      style="-fx-background-color: #F0F0F0; -fx-padding: 10;">

    <Button fx:id="bFlipUpDown" text="Flip up-side-down"  prefWidth="120"/>
    <Button fx:id="bFlipSide" text="Flip side-to-side"  prefWidth="120"/>
    <Button fx:id="bRotateC" wrapText="true" text="Rotate 90° clockwise"  prefWidth="120"/>
    <Button fx:id="bRotateAC" wrapText="true" text="Rotate 90° anti-clockwise"  prefWidth="120"/>
    <Button fx:id="bNegative" text="Negative"  prefWidth="120"/>

</VBox>
